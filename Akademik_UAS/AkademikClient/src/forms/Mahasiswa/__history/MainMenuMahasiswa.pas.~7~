unit MainMenuMahasiswa;

interface

uses
  Winapi.Windows, Winapi.Messages,
  System.SysUtils, System.Variants, System.Classes,
  Vcl.Graphics, Vcl.Controls, Vcl.Forms,
  Vcl.Dialogs, Vcl.Menus, Vcl.ExtCtrls;

type
  TMainForm = class(TForm)
    MainMenu1: TMainMenu;
    LihatNilai1: TMenuItem;
    BuatKRS1: TMenuItem;
    pnlContent: TPanel;
    procedure BuatKRS1Click(Sender: TObject);
    procedure LihatNilai1Click(Sender: TObject);
  private
    procedure ClearContent;
    procedure ShowFormInPanel(AForm: TForm);
  end;

var
  MainForm: TMainForm;

implementation

uses
  DaftarKrs,
  FormLihatNilai;

{$R *.dfm}

procedure TMainForm.ClearContent;
var
  I: Integer;
begin
  for I := pnlContent.ControlCount - 1 downto 0 do
    pnlContent.Controls[I].Free;
end;

procedure TMainForm.ShowFormInPanel(AForm: TForm);
begin
  ClearContent;

  AForm.Parent := pnlContent;
  AForm.Align  := alClient;
  AForm.BorderStyle := bsNone;
  AForm.Show;
end;

procedure TMainForm.BuatKRS1Click(Sender: TObject);
begin
  ShowFormInPanel(TFormDaftarKrs.Create(Self));
end;

procedure TMainForm.LihatNilai1Click(Sender: TObject);
begin
  ShowFormInPanel(TFrmLihatNilai.Create(Self));
end;

end.

